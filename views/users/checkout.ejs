function verifyPayment(payment,order){
	
	const response= fetch('/verify-payment',{
		method:'POST',
		headers:{
			'Content-Type':'application/json',
		},
		body:JSON.stringify({
			paymentDetails:payment,
			orderDetails:order
		})
	})
	.then(response=>response.json())
	.then(data=>{
