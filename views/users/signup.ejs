<html>
	<head>
		<meta charset="utf-8">
		<title>RegistrationForm_v4 by Colorlib</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- STYLE CSS -->
		<link rel="stylesheet" href="/frutika-master/assets2/css/style.css">
    <link rel="stylesheet" href="/validation.js">

    


    
  
	</head>

	<body>

		
    <div class="wrapper" >
			<div class="inner">
				<div class="image-holder">
					<img src="/frutika-master/assets2/images/bg-registration-form-4.jpg.jpg" alt="">
				</div>
        <form action="/signup" method="post" onsubmit="return validateForm()">
          <h3>Sign Up</h3>
          
          <!-- Use the "name" attribute to match your user model's fields -->
          <div class="form-holder active">
              <input type="text" name="name" placeholder="Name" class="form-control" required>
          </div>
          
          <div class="form-holder">
              <input type="email" name="email" placeholder="E-mail" class="form-control" required>
          </div>
        
          <div class="form-holder">
              <input type="text" id="mobile" name="mobile" placeholder="Mobile" class="form-control" required>
              <span id="mobile-error" style="color: red;"></span>
          </div>
          
          <div class="form-holder">
              <input type="password" id="password" name="password" placeholder="Password" class="form-control" style="font-size: 15px;" required>
              <span id="passwordError" style="color: red;"></span>
          </div>
          
          <% if (typeof message !== "undefined") { %>
              <p style="color: green;"> <%= message %></p>
          <% } %>
          
          <div class="form-login">
              <button type="submit">Sign up</button>
          </div>
      </form>
      
      <script>
          function validateForm() {
              // Call both validation functions and combine their results

              
              const isMobileValid = validateMobile();
              const isPasswordValid = validatePassword();
      
              // Return true only if both validations pass
              return isMobileValid && isPasswordValid;
          }

         

      
          function validateMobile() {
              const mobileInput = document.getElementById('mobile');
              const mobileError = document.getElementById('mobile-error');
      
              const mobile = mobileInput.value;
              const mobilePattern = /^[7-9][0-9]{9}$/;
      
              if (mobilePattern.test(mobile)) {
                  mobileError.textContent = ''; // Clear any previous error message
                  return true; // Mobile number is valid
              } else {
                  mobileError.textContent = 'Mobile number is not valid!';
                  return false; // Mobile number is not valid
              }
          }
      
          function validatePassword() {
              const passwordInput = document.getElementById('password');
              const passwordMessage = document.getElementById('passwordError');
      
              const password = passwordInput.value;
              const passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,}$/;
      
              if (passwordPattern.test(password)) {
                  passwordMessage.textContent = ''; // Clear any previous error message
                  return true; // Password is valid
              } else {
                  passwordMessage.textContent = 'Password should have at least 8 characters, including letters, numbers, and special characters.';
                  return false; // Password is not valid
              }
          }
      </script>
      
                  
             
                  
                  
                  <p>Already Have account? <a href="/login">Login</a></p>

						
					</div>
				</form>
			</div>
		</div>

