<%-include('../layouts/admin/adminSidebar')%>

<div class="clearfix"></div>
  <div class="content-wrapper">
    <div class="container-fluid">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Order</h5>
            <div class="table-responsive mt-4">

              
              <table class="table mt-5">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Total</th>

                    <th scope="col">Payment Method</th>
                    <th scope="col">Status</th>
                    <th scope="col" style="text-align: center;">Orders</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(orders.length> 0) {

                    for(let i=0; i<orders.length; i++) { %>
                        <tr>
                        <th scope="row">
                          <%= i+1 %>
                        </th>
                        <td>
                          <%= orders[i].name%>
                        </td>
                        <td>
                          <%= orders[i].date%>
                        </td>

                        <td>
                          <%= orders[i].total %>
                        </td>
                        <td>
                          <%= orders[i].paymentMethod%>
                        </td>
                        <td>
                          <%= orders[i].status %>
                        </td>
                         
                        <td>
                          <form action="/admin/viewOrderDetails/<%= orders[i].orderId %>" method="get">
                            <button type="submit" style="padding: 5px 10px; font-size: 12px;">View</button>
                        </form>
                        
                        

                        </td>
                         
                        

                        
                      </tr>
                      <% } } else { %>
                        <tr>
                          <td colspan="6" class="text-center">No orders</td>
                        </tr>
                        <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div><!--End Row-->

    <a href="/admin/home" class="btn btn-primary d-block mx-auto" style="width: 10%; font-size: 14px;">Go Back</a>

    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->

  </div>
  <!-- End container-fluid-->

  </div><!--End content-wrapper-->
  <!--Start Back To Top Button-->
  <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
  <!--End Back To Top Button-->


  <style>
    .content-wrapper {
      margin-left: 129px;
      padding-top: 50px;
      padding-left: 7px;
      padding-right: 10px;
      padding-bottom: 70px;
      overflow-x: hidden;

    }
  </style>



  <%- include('../layouts/admin/adminFooter') %>