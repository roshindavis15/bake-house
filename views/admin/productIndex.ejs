<%-include('../layouts/admin/adminSidebar')%>

<div class="clearfix"></div>
  <div class="content-wrapper">
    <div class="container-fluid">  
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              
              <div class="table-responsive mt-4">
                
               <a href="/admin/add-product" class="btn btn-primary ">Add New Product</a>
                <table class="table mt-5">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Name</th>
                      <th scope="col">Price</th>
                      <th scope="col">Image</th>
                      
                      <th scope="col">Stock</th>
                      <th scope="col">Description</th>
                      
                      <th scope="col">Status</th>  
                      <th scope="col" style="text-align: center;">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(products.length > 0) {
                      
                      for(let i=0; i<products.length; i++) {
                    %>
                    <tr>
                      <th scope="row"><%= i+1 %></th>
                      <td><%= products[i].name %></td>
                      <td><%= products[i].price %></td>
                      <td><img src="/frutika-master/uploads/<%=products[i].image[0] %>" alt="" class="rounded-image"></td>
                      
                      <td><%= products[i].stock %></td>
                      <td><%= products[i].description %></td>
                     
                      
                     
                    
                     

                      <!-- list|| Unlist -->
                      <td><% if(products[i].unlist===false) { %>
                        <p style="color: red; font-weight: bold;">List</p>
                    <% } else { %>
                        <p style="color: green; font-weight: bold;">Unlist</p>
                    <% } %>
                </td>





                <td><% if(products[i].unlist === false) { %>
                  <a href="/admin/unlist?pid=<%= products[i]._id %>" class="btn btn-danger">Unlist</a>
              <% } else { %>
                <a href="/admin/list?pid=<%=products[i]._id %>" class="btn btn-primary">List</a>
              <% } %>

              <a href="/admin/edit-product?pid=<%= products[i]._id %>" class="btn btn-info">Edit</a>
          </td>
   
          </td>
                    </tr>
                          <% }
                              } else { %>
                          <tr>
                              <td colspan="6" class="text-center">Products Not Found</td>
                          </tr>
                          <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div><!--End Row-->

      <a href="/admin/home" class="btn btn-primary d-block mx-auto" style="width: 10%; font-size: 14px;">Go Back</a>
	  
	  <!--start overlay-->
		  <div class="overlay toggle-menu"></div>
		<!--end overlay-->

    </div>
    <!-- End container-fluid-->
    
  </div><!--End content-wrapper-->
   <!--Start Back To Top Button-->
    <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    <!--End Back To Top Button-->
    
<style>
  .rounded-image {
    width: 50px; /* Set the desired width for your thumbnail */
    height: 50px; /* Set the desired height for your thumbnail */
    border-radius: 50%; /* Makes the image round */
    object-fit: cover; /* Ensures the image fills the thumbnail without distortion */
  }
</style>

